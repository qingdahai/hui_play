/* pages/index/index.wxss */

/* 搜索 */

.search-left input {
    width: 410rpx;
}

.search-right .down-select {
    position: relative;
    z-index: 9999;
    /* width: 210rpx; */
}

.search-right .down-select text {
    height: 60rpx;
    line-height: 60rpx;
    /* padding-left: 21rpx;
    padding-right: 10rpx; */
    color: rgba(0, 0, 0, 0.6);
}

.search-right .down-select image {
    width: 20.4rpx;
    height: 12rpx;
    position: relative;
    top: -4rpx;
    transform: rotate(180deg);
}

.search-right .down-select image.active {
    transform: rotate(0deg);
}

.selectItemBox {
    width: 180rpx;
    border: 2rpx solid #ebebeb;
    background: #fff;
    box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.20);
    border-radius: 8rpx;
    text-align: center;
    position: absolute;
    top: 100rpx;
    left: -60rpx;
}

.selectItemBox::after {
    content: "";
    width: 0;
    height: 0;
    border-left: 22rpx solid transparent;
    border-right: 22rpx solid transparent;
    border-bottom: 22rpx solid #fff;
    position: absolute;
    top: -18rpx;
    right: 20rpx;
}

.selectItemBox view {
    height: 72rpx;
    border-bottom: 2rpx solid #ebebeb;
}

.selectItemBox view:last-child {
    border-bottom: 0;
}

/*标题*/

.h-text {
    font-size: 18px;
    color: rgba(0, 0, 0, 0.8);
    margin-left: 36rpx;
    font-weight: bold;
    margin-top: 36rpx;
}

/* */

.inning-bottom .inning-bottom-right {
    font-size: 32rpx;
}

.inning-bottom .inning-bottom-right image {
    /* margin-top: 8rpx; */
}

.inning-bottom-left {
    align-items: center;
}

/*快速加入*/

.fast-join {
    position: fixed;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    right: 60rpx;
    bottom: 218rpx;
    z-index: 9999;
}

/*快速加入喜好选择*/
.myModal-cont {
    padding: 80rpx 0;
}

.myModal-cont>view {
    margin: 80rpx auto;
    font-size: 28rpx;
}

.itemType {
    display: inline-flex;
    align-content: stretch;
    width: 33.33%;
    margin-top: 44rpx;
}

.itemType>view {
    width: 36rpx;
    height: 36rpx;
    border: 2rpx solid rgba(0, 0, 0, 0.4);
    border-radius: 50%;
    margin-right: 20rpx;
}

.itemType>view.active {
    border-color: #3670fb;
}

.itemType>view>image {
    width: 36rpx;
    height: 36rpx;
}
.myModal-foot button {
    width: 214rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 40rpx;
}
