/* pages/indexPulldown/indexPulldown.wxss */

.page-head {
    display: flex;
    align-items: center;
    height: 88rpx;
    background: rgba(253, 74, 72, 1);
    color: #fff;
    font-size: 32rpx;
    justify-content: center;
}

.page-head image {
    width: 28rpx;
    height: 34rpx;
}

.inning-box:last-child {
    padding-bottom: 100rpx;
}

.page-bar {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fafafc;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.50);
    position: fixed;
    bottom: 0;
    z-index: 9999;
}

.page-bar image {
    width: 40rpx;
    height: 20rpx;
}

.page-bar image:first-child {
    transform: rotate(90deg);
    position: relative;
    /* margin-left: -30rpx; */
}

.page-bar image:last-child {
    transform: rotate(-90deg);
    margin-left: 196rpx;
    position: relative;
    top: -4rpx;
}
