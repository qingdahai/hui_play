.list {
    padding: 0 32rpx;
    background: #fff;
    height: 96rpx;
    line-height: 96rpx;
    margin-bottom: 1px;
}

.flex-average {
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}
.list .flex-average view image{
    width: 18rpx;
    height: 28rpx;
}
.text {
    background: #fff;
    padding: 20rpx 32rpx;
}

.text text {
    display: block;
}

.text text:last-child {
    line-height: 44rpx;
    color: rgba(0, 0, 0, 0.4);
    margin-top: 18rpx;
}

.buttons {
    position: absolute;
    width: 100%;
    bottom: 0;
}

.buttons view {
    width: 50%;
    text-align: center;
    background: #fff;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
}

.buttons view:first-child {
    color: rgba(255, 55, 55, 1);
}

.buttons view:last-child {
    background: rgba(54, 112, 251, 1);
    color: #fff;
}

