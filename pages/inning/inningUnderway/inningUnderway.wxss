.tips {
    height: 64rpx;
    line-height: 64rpx;
    background: #e3ebff;
    color: rgba(54, 112, 251, 0.8);
    padding: 0 32rpx;
}

.inningsList {
    height: 100rpx;
    background: #fff;
    padding: 20rpx 32rpx;
}

.creater {
    margin-right: 64rpx;
    position: relative;
}

.creater image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

.creater text {
    position: absolute;
    background: #3670fb;
    color: #fff;
    text-align: center;
    border: 2rpx solid #fff;
    border-radius: 200rpx;
    width: 76rpx;
    height: 40rpx;
    line-height: 40rpx;
    right: -36rpx;
    bottom: 0;
}

.otherList>view {
    margin-right: 64rpx;
    position: relative;
}

.otherList>view>image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

.otherList>view>view {
    position: absolute;
    right: -10rpx;
    bottom: 0;
    background: #fff;
}

