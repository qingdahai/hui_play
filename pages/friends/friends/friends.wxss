.tab-head {
    height: 80rpx;
    width: 540rpx;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    white-space: nowrap;
    position: fixed;
    top: 20rpx;
    left: 106rpx;
    z-index: 99;
    border-radius: 8rpx;
}

.tab-item {
    display: inline-block;
    width: 33.33%;
    text-align: center;
    border-right: 2rpx solid rgba(0, 0, 0, 0.1);
}

.tab-item.active {
    background: #3670fb;
    color: #fff;
}

.tab-content {
    margin-top: 120rpx;
}

.scoll-h {
    height: 100%;
}

