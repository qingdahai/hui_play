.myModal-body {
    height: 464rpx;
    text-align: center;
}

.myModal-cont image {
    width: 80rpx;
    height: 80rpx;
    margin-top: 80rpx;
}

.myModal-cont view {
    margin-top: 16rpx;
}

.myModal-foot {
    margin-top: 80rpx;
}

.myModal-foot button {
    position: static;
    background: #3670fb;
    border-radius: 4px;
    color: #fff;
}
