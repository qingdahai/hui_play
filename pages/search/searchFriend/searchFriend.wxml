<!--pages/searchFriend/searchFriend.wxml-->
<view class="page">
    <view class="search">
        <view class="flex-average">
            <view class="flex search-left">
                <image class="inputSearchImg" src="/images/search.png"></image>
                <view>
                    <input placeholder="手机号码/组局号" value="{{inputVal}}" bindinput="inputVal" bindconfirm="searchFriend"></input>
                </view>
            </view>
        </view>
    </view>
    <view class="inputSearch" bindtap="searchFriend" hidden="{{goSearch}}">
        <text>搜索：</text>
        <text>{{inputVal}}</text>
    </view>
</view>